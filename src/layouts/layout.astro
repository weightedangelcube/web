		<!-- Schema, remind me to add more to this later -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "WebSite",
				"name": "angelcube",
				"url": "https://angelcube.dev"
			}
		</script>
	</head>

